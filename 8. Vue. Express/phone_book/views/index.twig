{% extends 'layout.twig' %}

{% block body %}
  {% verbatim %}

  <div id="app" v-cloak class="container">
    <div class="row">
        <h1 class="col-12 text-center mt-4 mb-5">Phone Book</h1>
    </div>
    <div class="row justify-content-center">
        <div class="col-lg-9 col-xl-8 text-center">
            <table id="phone-book" class="table table-sm">
                <thead class="thead-light">
                <tr>
                    <th><input type="checkbox" id="highlight-all-checkbox" disabled></th>
                    <th>â„–</th>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Phone</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                    <tr v-for="(contact, index) in contacts" :key="contact.id">
                        <th><input type="checkbox"></th>
                        <th>{{ index + 1 }}</th>
                        <th>{{ contact.firstName }}</th>
                        <th>{{ contact.lastName }}</th>
                        <th>{{ contact.phone }}</th>
                        <th>
                            <button type="button" class="close" @click="deleteContact(contact)">&times;</button>
                        </th>
                    </tr>
                </tbody>
            </table>
            <div>
                <button type="button" id="delete-some-lines-button" class="btn btn-dark">Delete</button>
            </div>
        </div>

        <form id="add-person-form" class="needs-validation container col-lg-3" novalidate>
            <div class="form-group">
                <label for="input-name">First name</label>
                <input type="text" class="form-control word" id="input-name" placeholder="First name" v-model="firstName" required>
                <div class="invalid-feedback">
                    Insert first name!
                </div>
            </div>
            <div class="form-group">
                <label for="input-surname">Last name</label>
                <input type="text" class="form-control word" id="input-surname" placeholder="Last name" v-model="lastName" required>
                <div class="invalid-feedback">
                    Insert last name!
                </div>
            </div>
            <div class="form-group">
                <label for="input-phone">Phone</label>
                <input type="text" class="form-control" id="input-phone" placeholder="Phone" v-model="phone" required>
                <div class="invalid-feedback" id="invalid-phone-number">
                </div>
            </div>
            <div class="row justify-content-center">
                <button id="add-person" type="button" class="col-8 col-sm-5 col-lg-11 btn btn-dark mt-3" @click="addContact">Add note</button>
            </div>
        </form>
    </div>
  </div>

  {% endverbatim %}
{% endblock %}
